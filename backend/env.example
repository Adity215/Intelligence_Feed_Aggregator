# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/threat-intelligence
REDIS_URL=redis://localhost:6379

# Frontend URL
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# API Keys (for external services)
OPENAI_API_KEY=your-openai-api-key
VIRUSTOTAL_API_KEY=your-virustotal-api-key
ALIENVAULT_API_KEY=your-alienvault-api-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs

# Cache Configuration
CACHE_TTL=300
CACHE_CHECK_PERIOD=600

# Feed Collection Configuration
FEED_COLLECTION_INTERVAL=1800000
MAX_FEEDS_PER_SOURCE=50
FEED_TIMEOUT=30000

# IOC Extraction Configuration
IOC_EXTRACTION_ENABLED=true
IOC_CONFIDENCE_THRESHOLD=0.7

# AI Configuration
AI_SUMMARY_ENABLED=true
AI_TREND_ANALYSIS_ENABLED=true
AI_PREDICTION_ENABLED=true

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=25000
WS_HEARTBEAT_TIMEOUT=5000
